<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="com.digzdigital.reminderapp.fragment.AddCourseFragment">

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mtf_animationDuration="1000"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_image="@drawable/ic_book_black_24dp">

            <EditText
                android:id="@+id/courseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course title"
                android:textColor="#333"
                android:textColorHint="#666"
                android:textSize="15sp"
                tools:ignore="HardcodedText"/>
        </com.github.florent37.materialtextfield.MaterialTextField>

        <com.github.florent37.materialtextfield.MaterialTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mtf_animationDuration="1000"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_image="@drawable/ic_place_black_24dp">

            <EditText
                android:id="@+id/courseVenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Course venue"
                android:textColor="#333"
                android:textColorHint="#666"
                android:textSize="15sp"
                tools:ignore="HardcodedText"/>
        </com.github.florent37.materialtextfield.MaterialTextField>

        <fr.ganfra.materialspinner.MaterialSpinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingBottom="8dp"
            app:ms_alignLabels="false"
            app:ms_arrowSize="16dp"
            app:ms_baseColor="@color/white"
            app:ms_floatingLabelText="Day"
            android:id="@+id/daySelect"
            app:ms_hint="Day"
            app:ms_multiline="false"
            app:ms_thickness="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/courseStartTime"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start time: 8:00 AM"
                android:textColor="#fff"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TO"
                android:textColor="#fff"/>

            <Button
                android:id="@+id/courseEndTime"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End time: 8:00 AM"
                android:textColor="#fff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancel"
                style="@style/Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/save"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</layout>